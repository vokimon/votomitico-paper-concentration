@article{lago2000sistema,
  title={El sistema electoral espa{\~n}ol: una cuantificaci{\'o}n de sus efectos "mec{\'a}nico" y "psicol{\'o}gico"},
  author={Lago Pe{\~n}as, Ignacio and Lago Pe{\~n}as, Santiago},
  journal={Revista de Estudios Pol{\'\i}ticos},
  number={107},
  pages={13--34},
  year={2000},
  publisher={Centro de Estudios Pol{\'\i}ticos y Constitucionales},
  url={https://recyt.fecyt.es/index.php/RevEsPol/article/view/46656},
  note={
    Este artículo distingue entre los efectos mecánicos y psicológicos
    del sistema electoral D'Hondt en España.

    Cuantifica cómo la conversión de votos en escaños
    distorsiona la representación proporcional,
    tanto por el diseño del sistema
    como por las expectativas estratégicas de los votantes.

    Relacionado con este artículo porque:
    proporciona marco empírico para validar o contrastar
    los resultados de la fase empírica de esta investigación.
    
    Aporta terminología y medidas cuantitativas
    relevantes para describir el efecto de los trasvases simulados.
  }
}

@article{lago2005manipulacion,
  title={‘Todav{\'\i}a no s{\'e} qui{\'e}nes, pero ganaremos’: manipulaci{\'o}n pol{\'\i}tica del sistema electoral espa{\~n}ol},
  author={Lago, Ignacio and Montero, Jos{\'e} R.},
  journal={Zona Abierta},
  volume={110},
  number={111},
  pages={39--58},
  year={2005},
  publisher={Jaime Gaviria Productions},
  url={https://www.researchgate.net/publication/270685135_'Todavia_no_se_quienes_pero_ganaremos'_manipulacion_politica_del_sistema_electoral_espanol},
  note={
    El artículo explora cómo ciertos actores políticos
    intentan influir o beneficiarse del diseño del sistema electoral,
    a través de reformas, discursos o propuestas estratégicas.

    Se describe la idea de manipulación anticipatoria
    del sistema de reparto, anticipando sus efectos previsibles.

    Relacionado con este artículo porque:
    refuerza la motivación del estudio sobre trasvases de votos
    como herramienta para entender mejor
    los límites y oportunidades del sistema D’Hondt.

    Útil para el marco contextual y la discusión política
    de las implicaciones de los resultados.
  }
}

@article{lago2005fragmentacion,
  title={Incentivos distintos y comportamientos iguales: la fragmentaci{\'o}n del sistema de partidos en las elecciones del Congreso y el Senado},
  author={Lago Pe{\~n}as, Ignacio and Mart{\'\i}nez i Coma, Ferr{\'a}n},
  journal={Revista de Estudios Pol{\'\i}ticos},
  number={135},
  pages={159--178},
  year={2007},
  publisher={Centro de Estudios Pol{\'\i}ticos y Constitucionales},
  url={https://dialnet.unirioja.es/servlet/articulo?codigo=2656310},
  note={
    Este estudio analiza cómo las diferencias en las reglas electorales
    entre Congreso y Senado afectan
    a la fragmentación del sistema de partidos.

    Argumenta que, pese a reglas distintas,
    el comportamiento electoral es similar en ambas cámaras.

    Relacionado con este artículo porque:
    sugiere que el comportamiento de los votantes
    no siempre responde de forma simple
    a los incentivos mecánicos del sistema,
    cuestión relevante para interpretar los efectos simulados
    en la fase empírica y analítica.

    También ayuda a contextualizar los resultados
    dentro del sistema político español.
  }
}

