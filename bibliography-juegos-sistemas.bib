@article{Cheng2020,
  author = {Daizhan Cheng and Zequn Liu},
  title = {Optimization via game theoretic control},
  journal = {National Science Review},
  year = {2020},
  volume = {7},
  number = {7},
  pages = {1120--1122},
  doi = {10.1093/nsr/nwaa019},
  url = {https://academic.oup.com/nsr/article/7/7/1120/5809983},
  note = {
    Este artículo presenta el uso del control basado en teoría de juegos
    para resolver problemas de optimización en sistemas distribuidos.
    La metodología convierte un sistema en juego potencial,
    permitiendo la actualización de estrategias hacia un equilibrio de Nash.
    Este enfoque se alinea con la variación controlada,
    donde se modelan interacciones estratégicas entre agentes
    para evaluar el impacto de cambios en el sistema.
  }
}

